{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "globals": {},
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:playwright/playwright-test"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 80,
        "ignoreStrings": true
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none",
        "ignoreRestSiblings": true
      }
    ]
  }
}
